---
import Banner from '../components/Banner.astro';
import Navigation from '../components/Navigation.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "e-Mithram - Your Trusted Digital Service Partner in Kothamangalam" } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    
    <!-- Favicon and Icons -->
    <link rel="icon" type="image/x-icon" href={`${baseUrl}favicon.ico`} />
    <link rel="icon" type="image/png" sizes="32x32" href={`${baseUrl}icons/favicon-32x32.png`} />
    <link rel="icon" type="image/png" sizes="16x16" href={`${baseUrl}icons/favicon-16x16.png`} />
    <link rel="apple-touch-icon" sizes="180x180" href={`${baseUrl}icons/apple-touch-icon.png`} />
    <link rel="manifest" href={`${baseUrl}icons/site.webmanifest`} />
    
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-screen bg-gray-50">
    <!-- Facebook SDK -->
    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v23.0"></script>
    
    <header class="bg-white shadow-sm">
      <Banner />
      <Navigation currentPath={Astro.url.pathname} />
    </header>

    <main>
      <slot />
    </main>

    <footer class="bg-gray-800 text-white">
      <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-lg font-semibold mb-4">Contact Us</h3>
            <p class="text-gray-300">Thottyil Plaza, Near Auto Stand, Thankalam, Kothamangalam, Kerala 686666</p>
            <p class="text-gray-300">Phone: +91 9847461054</p>
            <p class="text-gray-300">Email: emithramthankalam@gmail.com</p>
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
            <ul class="space-y-2">
              <li><a href={`${baseUrl}services`} class="text-gray-300 hover:text-white">Services</a></li>
              <li><a href="https://www.facebook.com/profile.php?id=61576044371328" target="_blank" rel="noopener noreferrer" class="text-gray-300 hover:text-white">Facebook</a></li>
              <li><a href={`${baseUrl}contact`} class="text-gray-300 hover:text-white">Contact</a></li>
            </ul>
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-4">Working Hours</h3>
            <p class="text-gray-300">Monday - Saturday</p>
            <p class="text-gray-300">9:00 AM - 6:00 PM</p>
          </div>
        </div>
        <div class="mt-8 pt-8 border-t border-gray-700 text-center text-gray-300">
          <p>&copy; {new Date().getFullYear()} e-Mithram. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html> 