---
import '../styles/global.css';
import type { StructuredData } from '../types/seo';

interface Props {
  title: string;
  description: string;
  locale?: string;
  structuredData?: StructuredData | StructuredData[];
  ogImage?: string;
  canonical?: string;
}

const {
  title,
  description,
  locale = 'en',
  structuredData,
  ogImage = '/images/og-default.jpg',
  canonical
} = Astro.props;

const siteUrl = 'https://nijojo.com';
const fullUrl = canonical || new URL(Astro.url.pathname, siteUrl).href;
const fullOgImage = new URL(ogImage, siteUrl).href;

// Alternate language URLs
const alternateLang = locale === 'en' ? 'ml' : 'en';
const alternateUrl = locale === 'en'
  ? new URL(`/ml${Astro.url.pathname}`, siteUrl).href
  : new URL(Astro.url.pathname.replace('/ml', ''), siteUrl).href;
---

<!DOCTYPE html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Canonical URL -->
    <link rel="canonical" href={fullUrl} />

    <!-- Alternate Languages -->
    <link rel="alternate" hreflang={locale} href={fullUrl} />
    <link rel="alternate" hreflang={alternateLang} href={alternateUrl} />
    <link rel="alternate" hreflang="x-default" href={new URL(Astro.url.pathname.replace('/ml', ''), siteUrl).href} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={fullUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullOgImage} />
    <meta property="og:locale" content={locale === 'en' ? 'en_US' : 'ml_IN'} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={fullUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={fullOgImage} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />

    <!-- Structured Data -->
    {structuredData && (
      Array.isArray(structuredData)
        ? structuredData.map(data => (
            <script type="application/ld+json" set:html={JSON.stringify(data)} />
          ))
        : <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
    )}

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-SE3GW2DZJV"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-SE3GW2DZJV');
    </script>

    <!-- Facebook SDK -->
    <script>
      window.fbAsyncInit = function() {
        FB.init({
          xfbml: true,
          version: 'v18.0'
        });
      };
    </script>
    <script async defer crossorigin="anonymous"
      src="https://connect.facebook.net/en_US/sdk.js"></script>
  </head>
  <body class="font-sans antialiased">
    <slot />
  </body>
</html>
