---
import type { ContactInfo } from '../../types/business';

interface Props {
  contact: ContactInfo;
  showMap?: boolean;
  mapUrl?: string;
  locale?: string;
}

const { contact, showMap = false, mapUrl, locale = 'en' } = Astro.props;
---

<div class="bg-gradient-to-b from-gray-50 to-white py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-extrabold text-gray-900 sm:text-5xl mb-4">
        {locale === 'ml' ? 'ബന്ധപ്പെടാനുള്ള വിവരങ്ങൾ' : 'Contact Information'}
      </h2>
      <div class="w-24 h-1 bg-gradient-to-r from-primary to-secondary mx-auto mb-4"></div>
      <p class="mt-4 text-xl text-gray-700">
        {locale === 'ml' ? 'ഏതെങ്കിലും വിവരങ്ങൾക്ക് ഞങ്ങളുമായി ബന്ധപ്പെടുക' : 'Get in touch with us for any inquiries'}
      </p>
    </div>

    <div class={`grid grid-cols-1 gap-8 ${showMap && mapUrl ? 'md:grid-cols-2' : ''}`}>
      <div>
        <div class="bg-white rounded-lg shadow-lg p-8 border-2 border-gray-100">
          <div class="space-y-6">
            <!-- Phone -->
            <div class="flex items-start">
              <svg class="h-6 w-6 text-primary mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-900">{locale === 'ml' ? 'ഫോൺ' : 'Phone'}</p>
                <a href={`tel:${contact.phone}`} class="text-primary hover:text-primary-light">
                  {contact.phone}
                </a>
              </div>
            </div>

            <!-- Email -->
            <div class="flex items-start">
              <svg class="h-6 w-6 text-primary mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-900">{locale === 'ml' ? 'ഇമെയിൽ' : 'Email'}</p>
                <a href={`mailto:${contact.email}`} class="text-primary hover:text-primary-light break-all">
                  {contact.email}
                </a>
              </div>
            </div>

            <!-- Address -->
            <div class="flex items-start">
              <svg class="h-6 w-6 text-primary mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-900">{locale === 'ml' ? 'വിലാസം' : 'Address'}</p>
                <p class="text-gray-600">{contact.address}</p>
              </div>
            </div>

            <!-- Working Hours -->
            {contact.workingHours && (
              <div class="flex items-start">
                <svg class="h-6 w-6 text-primary mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div class="ml-3">
                  <p class="text-sm font-medium text-gray-900">{locale === 'ml' ? 'പ്രവർത്തന സമയം' : 'Working Hours'}</p>
                  <p class="text-gray-600">{contact.workingHours}</p>
                </div>
              </div>
            )}

            <!-- WhatsApp -->
            {contact.whatsapp && (
              <div class="mt-6">
                <a
                  href={locale === 'ml'
                    ? `https://wa.me/919847461054?text=${encodeURIComponent('ഹായ് നിജോ, ബന്ധപ്പെടാൻ ആഗ്രഹിക്കുന്നു')}`
                    : `https://wa.me/919847461054?text=Hi%20Nijo,%20I'd%20like%20to%20get%20in%20touch`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center justify-center w-full px-6 py-3 bg-accent-whatsapp text-white font-bold rounded-lg hover:bg-green-600 transition-all shadow-lg hover:shadow-xl hover:scale-105"
                >
                  <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
                  </svg>
                  {locale === 'ml' ? 'വാട്ട്‌സ്ആപ്പിൽ ചാറ്റ് ചെയ്യുക' : 'Chat on WhatsApp'}
                </a>
              </div>
            )}

            <!-- Facebook -->
            {contact.facebook && (
              <div class="mt-4">
                <a
                  href={contact.facebook}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center justify-center w-full px-6 py-3 bg-accent-facebook text-white font-bold rounded-lg hover:opacity-90 transition-all shadow-lg hover:shadow-xl hover:scale-105"
                >
                  <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                  {locale === 'ml' ? 'ഫേസ്ബുക്കിൽ പിന്തുടരുക' : 'Follow us on Facebook'}
                </a>
              </div>
            )}
          </div>
        </div>
      </div>

      <!-- Map -->
      {showMap && mapUrl && (
        <div class="h-96 md:h-auto">
          <iframe
            src={mapUrl}
            width="100%"
            height="100%"
            style="border:0; min-height: 400px;"
            allowfullscreen
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            class="rounded-lg shadow-md"
          ></iframe>
        </div>
      )}
    </div>
  </div>
</div>
