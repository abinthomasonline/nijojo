---
import type { Service } from '../../types/business';
import { withLocale } from '../../utils/url';

interface Props {
  service: Service;
  businessSlug: string;
  locale?: string;
}

const { service, businessSlug, locale = 'en' } = Astro.props;

const serviceUrl = withLocale(`/${businessSlug}/services/${service.slug}`, locale);
---

<a
  href={serviceUrl}
  class="block bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 border-2 border-gray-100 hover:border-secondary"
>
  <div class="p-6 h-full bg-gradient-to-br from-white to-gray-50">
    <div class="text-5xl mb-4 filter drop-shadow-sm">{service.icon}</div>
    <h3 class="text-xl font-bold text-gray-900 mb-2">
      {service.title}
    </h3>
    <p class="text-gray-700 mb-4 text-sm leading-relaxed">
      {service.description}
    </p>
    <span class="inline-flex items-center text-primary font-bold hover:text-primary-dark transition-colors">
      Learn more
      <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </span>
  </div>
</a>
