---
interface Props {
  name: string;
  slug: string;
  shortDescription: string;
  locale?: string;
}

const { name, slug, shortDescription, locale = 'en' } = Astro.props;

const businessUrl = locale === 'en' ? `/${slug}` : `/${locale}/${slug}`;
---

<a
  href={businessUrl}
  class="block bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border-2 border-gray-100 hover:border-primary"
>
  <div class="p-8 bg-gradient-to-br from-white to-gray-50">
    <h3 class="text-2xl font-bold text-gray-900 mb-3">
      {name}
    </h3>
    <p class="text-gray-700 mb-6 text-base">
      {shortDescription}
    </p>
    <span class="inline-flex items-center text-primary font-bold hover:text-primary-dark transition-colors">
      Explore services
      <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </span>
  </div>
</a>
