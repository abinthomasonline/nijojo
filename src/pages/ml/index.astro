---
import HomeLayout from '../../layouts/HomeLayout.astro';
import Navigation from '../../components/shared/Navigation.astro';
import PersonalHero from '../../components/home/PersonalHero.astro';
import BusinessGrid from '../../components/home/BusinessGrid.astro';
import { personInfoMl as personInfo, businessesMl as businesses } from '../../config/site.ml';
import type { StructuredData } from '../../types/seo';

const locale = 'ml';

// Generate structured data for Person
const structuredData: StructuredData = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  'name': personInfo.name,
  'jobTitle': personInfo.title,
  'description': personInfo.bio,
  'telephone': personInfo.contact.phone,
  'email': personInfo.contact.email,
  'address': {
    '@type': 'PostalAddress',
    'addressLocality': 'Kothamangalam',
    'addressRegion': 'Kerala',
    'addressCountry': 'IN'
  },
  'owns': businesses.map(business => ({
    '@type': 'Organization',
    'name': business.name,
    'url': `https://nijojo.com/${business.slug}`
  }))
};
---

<HomeLayout
  title={`${personInfo.name} - ${personInfo.title}`}
  description={personInfo.bio}
  locale={locale}
  structuredData={structuredData}
>
  <!-- Navigation -->
  <Navigation currentPath="/ml" locale={locale} />

  <!-- Personal Hero Section -->
  <PersonalHero person={personInfo} locale={locale} />

  <!-- Business Grid Section -->
  <BusinessGrid locale={locale} />

  <!-- Footer -->
  <footer class="bg-gradient-to-b from-primary-dark to-black text-white py-12 border-t-4 border-secondary">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
